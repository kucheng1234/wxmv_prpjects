.search{
  padding: 0 20rpx;
  display: flex;
}
.btn{
  height: 64.8rpx;
  width: 100rpx !important;
  font-size: 24rpx;
  padding: 0;
  line-height: 64.8rpx;
  background-color: black;
  color: #eee;
}
.search input{
  flex: 1;
  background-color: #333;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}
.hotSearch {
  padding: 0 20rpx;
}
.content{
  display: inline-block;
  padding: 10rpx;
  margin-right: 20rpx;
  background-color: #242929;
  color: #eee;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.title{
  padding: 20rpx 0;
  font-size: 28rpx;
}