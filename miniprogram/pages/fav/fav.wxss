.lists_box{
  height: 450rpx;
  width: 100%;
  position: relative;
}
.lists_box image{
  width: 100%;
  height: 100%;
  display: block;
}
.lists_box .liststext_box{
  z-index: 7;
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  color: #eee;
  font-size: 28rpx;
}
.lists_box .liststext_box .liststext_top{
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.lists_box .liststext_box .liststext_top text{
  margin-left: 10rpx;
}
.lists_box .hide{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.3);
  z-index: 6;
}
.content{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
}